<%- include("./layouts/header.ejs") %>

  <div class="container">
    <div class="row">
      <div class="col-sm-6 mt-5">
        <h2 class="alert alert-success text-center">Add New Product</h2>
        <form method="POST">
          <div class="mb-3">
            <label for="name" class="form-label">Product name</label>
            <input type="text" class="form-control" id="name" name="name" />
          </div>
          <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="text" class="form-control" id="price" name="price" />
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
      <div class="col-sm-6 mt-5">
        <h2 class="alert alert-danger text-center">List of Library</h2>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">price</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% var i=1 %>
              <% data.forEach((item)=> { %>
                <tr>
                  <td>
                    <%= i++ %>
                  </td>
                  <td>
                    <%= item.name %>
                  </td>
                  <td>
                    <%= item.price %>
                  </td>
                  <td>
                    <form action="/product/edit/<%= item._id %>" method="get" class="d-inline">
                      <button type="submit" class="btn">
                        <i class="fas fa-pen-square text-info"></i>
                      </button>
                    </form>
                    <form action="/product/delete/<%= item._id %>" method="post" class="d-inline">
                      <button type="submit" class="btn">
                        <i class="fas fa-trash text-danger"></i>
                      </button>
                    </form>
                  </td>
                </tr>
                <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <%- include("./layouts/footer.ejs") %>